{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true

  },
  "include": [
    "src/**/*.ts"
, "src/validator.ts"  ],
  "exclude": [
    "node_modules"
  ]
}